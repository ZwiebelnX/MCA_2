<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintCreate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".Act.CreateActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/RedoButtonCreate"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_info_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Redo_Cencel_Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/RedoButtonCreate"
        app:layout_constraintEnd_toEndOf="@+id/RedoButtonCreate"
        app:layout_constraintStart_toStartOf="@+id/RedoButtonCreate"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Redo_Reverst_Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/Redo_Cencel_Create"
        app:layout_constraintEnd_toEndOf="@+id/Redo_Cencel_Create"
        app:layout_constraintStart_toStartOf="@+id/Redo_Cencel_Create"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="177dp"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/shape3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="圆形"
            android:visibility="gone" />

        <Button
            android:id="@+id/shape2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="矩形"
            android:visibility="gone" />

        <Button
            android:id="@+id/shape1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="条状"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="387dp"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="196dp"
        android:orientation="vertical"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/pitch7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="xi"
            android:visibility="gone" />

        <Button
            android:id="@+id/pitch6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="la"
            android:visibility="gone" />

        <Button
            android:id="@+id/pitch5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="so"
            android:visibility="gone" />

        <Button
            android:id="@+id/pitch4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="fa"
            android:visibility="gone" />

        <Button
            android:id="@+id/pitch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="mi"
            android:visibility="gone" />

        <Button
            android:id="@+id/pitch2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="re"
            android:visibility="gone" />

        <Button
            android:id="@+id/pitch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="do"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="178dp"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="136dp"
        android:orientation="vertical"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/bright3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="浅"
            android:visibility="gone" />

        <Button
            android:id="@+id/bright2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="正常"
            android:visibility="gone" />

        <Button
            android:id="@+id/bright1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="深"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="177dp"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="76dp"
        android:orientation="vertical"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/color3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="蓝"
            android:visibility="gone" />

        <Button
            android:id="@+id/color2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="绿"
            android:visibility="gone" />

        <Button
            android:id="@+id/color1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/button_create_item"
            android:text="黄"
            android:visibility="gone" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/BackButton_Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:elevation="4dp"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <LinearLayout
        android:id="@+id/MainWinBoxCreate"
        android:layout_width="368dp"
        android:layout_height="440dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.zwiebelnx.mca_2.View.DrawItemViewCreate
            android:id="@+id/MainWinCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ImageView
        android:id="@+id/PreView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bar_y_1" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="67dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ItemShapeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_create_item"
            android:text="形状"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ItemColorButton"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ItemColorButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_create_item"
            android:text="颜色"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ItemBrightButton" />

        <Button
            android:id="@+id/ItemBrightButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_create_item"
            android:text="深浅"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ItemPitchButton" />

        <Button
            android:id="@+id/ItemPitchButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_create_item"
            android:text="音高"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/PlayButton_Create" />

        <Button
            android:id="@+id/PlayButton_Create"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="试听"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ShareButton_Create" />

        <Button
            android:id="@+id/ShareButton_Create"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:text="分享"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
